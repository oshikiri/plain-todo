{
  "compilerOptions": {
      "module": "commonjs",
      "alwaysStrict": true,
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,

      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,

      "outDir": "./built",
      "sourceMap": true,
      "target": "es5"
  },
  "include": [
      "./src/**/*"
  ]
}
