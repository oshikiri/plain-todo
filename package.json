{
  "name": "plain-todo",
  "version": "0.5.0",
  "description": "TODO app based on yaml",
  "main": "src/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/plain-todo.git"
  },
  "scripts": {
    "postinstall": "patch --forward --unified node_modules/browser-sync/dist/server/utils.js < scripts/turn-off-getsnippetmiddleware.patch || true",
    "build": "tsc",
    "postbuild": "chmod +x built/cli.js && cp src/html/style.css built/html/ && cp src/html/utils.js built/html/",
    "format": "prettier --write src/* docs/schema.json package.json",
    "test": "jest"
  },
  "bin": {
    "todo": "built/cli.js"
  },
  "author": {
    "name": "Takamasa Oshikiri",
    "email": "mail@oshikiri.org"
  },
  "license": "MIT",
  "dependencies": {
    "@types/jsdom": "^20.0.0",
    "browser-sync": "^2.27.11",
    "dayjs": "^1.11.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^20.0.0",
    "marked": "^4.0.14",
    "neo-blessed": "^0.2.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/marked": "^4.0.3",
    "@types/node": "^14.17.3",
    "jest": "^27.3.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
