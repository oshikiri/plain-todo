{
  "name": "plain-todo",
  "version": "0.3.0",
  "description": "TODO app based on yaml",
  "main": "src/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/plain-todo.git"
  },
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "format": "node_modules/.bin/prettier --write src/* docs/schema.json package.json",
    "test": "jest"
  },
  "bin": {
    "todo": "built/cli.js"
  },
  "author": {
    "name": "Takamasa Oshikiri",
    "email": "mail@oshikiri.org"
  },
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.10.4",
    "js-yaml": "^4.1.0",
    "neo-blessed": "^0.2.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^14.14.45",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  }
}
